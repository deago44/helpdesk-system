# Helpdesk Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ===========================================
# APPLICATION SECRETS
# ===========================================

# Flask secret key (generate a secure random string)
FLASK_SECRET_KEY=your-secret-key-here-change-this-in-production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Development (SQLite)
DATABASE_URL=sqlite:///tickets.db

# Production (PostgreSQL) - uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/helpdesk

# ===========================================
# CORS AND SECURITY
# ===========================================

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Upload directory
UPLOAD_FOLDER=./uploads

# Maximum file size (in bytes) - 10MB default
MAX_CONTENT_LENGTH=10485760

# ===========================================
# PRODUCTION CONFIGURATION (Optional)
# ===========================================

# Redis URL for caching and rate limiting
# REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_BUCKET=your-s3-bucket-name
# S3_REGION=us-east-1

# Email Configuration (for password reset)
# SMTP_URL=smtp://username:password@smtp.server:587
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ===========================================
# MONITORING AND LOGGING (Optional)
# ===========================================

# Sentry DSN for error reporting
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Flask debug mode (set to False in production)
FLASK_DEBUG=True

# Flask environment
FLASK_ENV=development
